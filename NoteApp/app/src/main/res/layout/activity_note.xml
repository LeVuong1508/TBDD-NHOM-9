<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Nút Đăng xuất -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/white"/>

    <!-- Ô tìm kiếm -->
    <EditText
        android:id="@+id/edtSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tìm ghi chú..."
        android:padding="12dp"
        android:layout_margin="8dp"
        android:layout_below="@id/btnLogout" />

    <!-- Danh sách ghi chú -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_below="@id/edtSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"/>

    <!-- Form thêm ghi chú (ẩn ban đầu) -->
    <LinearLayout
        android:id="@+id/layoutForm"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#FFFFFF"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tiêu đề ghi chú"
            android:inputType="textCapSentences"/>

        <EditText
            android:id="@+id/edtContent"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Nội dung ghi chú"
            android:gravity="top"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine"/>

        <CheckBox
            android:id="@+id/chkImportant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh dấu quan trọng"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnSaveNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu ghi chú"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <!-- Nút + -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        android:contentDescription="Thêm ghi chú"/>

    <!-- Nút xem chia sẻ -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="275dp"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@id/fabMain"
        android:contentDescription="Xem danh sách chia sẻ"
        android:src="@drawable/ic_share" />
</RelativeLayout>
